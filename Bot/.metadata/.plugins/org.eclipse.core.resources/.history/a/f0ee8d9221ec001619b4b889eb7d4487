import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

public class Overlay extends JFrame{
	private final static int GAME_WIDTH = 675;
	private final static int GAME_HEIGHT = 814;

	 public Overlay() {
	        JFrame frame = new JFrame("Script Window");
	        frame.setSize(GAME_WIDTH + 1, GAME_HEIGHT + 10);
	        frame.setUndecorated(true);
	        frame.setBackground(new Color(0, 0, 0, 0));
	        frame.setAlwaysOnTop(true);
	        frame.setLayout(new BorderLayout());
	        // Without this, the window is draggable from any non transparent
	        // point, including points  inside textboxes.
	        //frame.getRootPane().putClientProperty("apple.awt.draggableWindowBackground", false);

	       // frame.getContentPane().setLayout(new java.awt.BorderLayout());
	        //frame.getContentPane().add(new JTextField("text field north"), java.awt.BorderLayout.NORTH);
	        JButton startButton = new JButton("Start");
	        startButton.addActionListener(new ActionListener() {
				
				@Override
				public void actionPerformed(ActionEvent e) {
					System.out.println("Start Script Thread");
					
				}
			});
	 
	        
	        PlayBoundry window = new PlayBoundry(frame, GAME_WIDTH, GAME_HEIGHT);
	        frame.add(window, BorderLayout.CENTER);
	        frame.add(startButton, BorderLayout.SOUTH);
	        frame.setVisible(true);
	        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	        //frame.pack();
	 }
}
