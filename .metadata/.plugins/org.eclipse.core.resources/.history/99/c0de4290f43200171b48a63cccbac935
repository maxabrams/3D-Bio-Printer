import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;


public class CloseDialog extends JDialog implements ActionListener {
	
	JButton button;
	public CloseDialog(JButton closeButton){
		JPanel buttonPane=new JPanel( new FlowLayout(FlowLayout.CENTER));
		buttonPane.setPreferredSize(new Dimension(400,200));
		this.setResizable(false);
		button = closeButton;
		
	     button.addActionListener(this);
	     button.setPreferredSize(new Dimension(300,100));
	     buttonPane.add(button, BorderLayout.CENTER);
	     add(buttonPane);
	     pack();
	     setVisible(true);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		dispose();
		
	};
	
	 public void paint(Graphics g) {
	     Graphics2D ga = (Graphics2D)g;
	     ga.setPaint(Color.red);
	     ga.drawOval(150,150,100,100);
	     
	  }
}
